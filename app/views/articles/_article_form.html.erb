

<%= form_for(@article) do |f| %>

<ul>
  <% @article.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title, placeholder: "Title" %>
</p>

<p>
  <%= f.label :body %><br/>
  <%= f.text_area :body, placeholder: "Article Body" %><br/>
</p>

<p>
  <%= f.submit value: "Publish" %>
 </p>
<% end %>
